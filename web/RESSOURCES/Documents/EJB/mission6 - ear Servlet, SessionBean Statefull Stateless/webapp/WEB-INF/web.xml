<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app PUBLIC
	"-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
	"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<servlet>
		<servlet-name>stateless</servlet-name>
		<servlet-class>ear.web.StatelessServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>stateful</servlet-name>
		<servlet-class>ear.web.StatefulServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>stateless</servlet-name>
		<url-pattern>/StatelessServlet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>stateful</servlet-name>
		<url-pattern>/StatefulServlet</url-pattern>
	</servlet-mapping>

</web-app>
