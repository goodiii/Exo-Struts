<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">


<struts-config>
    <form-beans>
        <form-bean name="bean" type="com.myapp.struts.Bean"/>
    </form-beans>
    
    <global-forwards>
        <forward name="Cours" path="/WEB-INF/Cours.jsp"/>
        <forward name="Accueil" path="/WEB-INF/index.jsp"/>
        <forward name="Formulaire" path="/WEB-INF/Cours/Formulaire.jsp"/>
        
    </global-forwards>
    <!-- Cours Formulaire -->
    <action-mappings>
        <action path="/Formulaire1" type="com.myapp.struts.Action1" name="bean" scope="session" validate="true" input="/WEB-INF/Cours/Formulaire.jsp" cancellable="true">
            <forward name="suite" path="/WEB-INF/Cours/Page2.jsp"/>
            <forward name="index" path="/WEB-INF/index.jsp"></forward> 
        </action>
        
        <action path="/Formulaire2" type="com.myapp.struts.Action2" name="bean" scope="session" validate="true" input="/WEB-INF/Cours/Page2.jsp" cancellable="true">
            <forward name="suite" path="/WEB-INF/Cours/Page3.jsp"/>
            <forward name="Page2" path="/WEB-INF/Cours/Page2.jsp"></forward> 
        </action>
        
        <action path="/Formulaire" type="com.myapp.struts.Formulaire"/>       
        <action path="/Cours" type="com.myapp.struts.Cours"/>
        <action path="/Accueil" type="com.myapp.struts.Accueil"/>
            
    </action-mappings>
    
    <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>

    <message-resources parameter="com/myapp/struts/ApplicationResource"/>    
    

    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />      
        <set-property property="moduleAware" value="true" />
    </plug-in>
    
    <!-- ========================= Validator plugin ================================= -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property
            property="pathnames"
            value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml"/>
    </plug-in>
  
</struts-config>
