<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">


<struts-config>
    <form-beans>
        <form-bean name="bean" type="com.myapp.struts.Bean"/>
    </form-beans>
    
    <!-- Redirection naviguer--> 
    <global-forwards>
        <forward name="Cours" path="/WEB-INF/Cours.jsp"/>
        <forward name="Accueil" path="/WEB-INF/index.jsp"/>             
    </global-forwards>
 
   
    <action-mappings>
        
        <action path="/Cours" type="com.myapp.struts.Cours"/>
        <action path="/Accueil" type="com.myapp.struts.Accueil"/>
        
        <!-- Cours Formulaire -->          
        <action path="/Formulaire1" type="com.myapp.struts.Action1" name="bean" scope="session" validate="true" input="/WEB-INF/Cours/Formulaire/Formulaire.jsp" cancellable="true">
            <forward name="suite" path="/WEB-INF/Cours/Formulaire/Formulaire2.jsp"/>
            <forward name="index" path="/WEB-INF/index.jsp"></forward> 
        </action>       
        <action path="/Formulaire2" type="com.myapp.struts.Action2" name="bean" scope="session" validate="true" input="/WEB-INF/Cours/Formulaire/Formulaire2.jsp" cancellable="true">
            <forward name="suite" path="/WEB-INF/Cours/Formulaire/Formulaire3.jsp"/>
            <forward name="Page2" path="/WEB-INF/Cours/Formulaire/Formulaire2.jsp"></forward> 
        </action>        
        <action path="/Formulaire" type="com.myapp.struts.Formulaire">
            <forward name="Formulaire" path="/WEB-INF/Cours/Formulaire/Formulaire.jsp"/>
        </action>
                          
        <!-- Cours ConnectionSQL -->
        <action path="/Connection" type="com.myapp.struts.Connection"> 
            <forward name="Connection" path="/WEB-INF/Cours/Connection/Connection.jsp"/> 
        </action>
        
        <action path="/Connect" type="com.myapp.struts.Connect" name="ConnectSQL" scope="session" >
            <forward name="Connect" path="/WEB-INF/Cours/Connection/Connect.jsp"/>  
        </action>
        
        <!-- Cours NTiers -->
        <action path="/NotesN-tiers" type="NTiers.Ntiers" >
            <forward name="NTiers" path="/WEB-INF/Cours/NTiers/NTiers.jsp"/>
        </action>

    </action-mappings>
    
    <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>

    <message-resources parameter="com/myapp/struts/ApplicationResource"/>    
    
    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />      
        <set-property property="moduleAware" value="true" />
    </plug-in>
    
    <!-- ========================= Validator plugin ================================= -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property
            property="pathnames"
            value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml"/>
    </plug-in>
  
</struts-config>
